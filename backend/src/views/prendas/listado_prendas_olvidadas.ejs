<%- include('../../views/header_email.ejs') %>

  <div style="background-color: #f9f9f9; padding: 20px; border-radius: 10px;">

     <p style="margin-bottom: 20px; font-size: 18px; color: #333;">
      Por medio del presente se les informa sobre las prendas en estado <strong>olvidado</strong> al cierre: 
    </p>
    <p style="margin-bottom: 20px; font-size: 18px; color: #333;">
      fecha: <%=fechaCierre%>
    </p>
    <table style="width:100%; border-collapse: collapse;" border="1">
      <thead>
        <tr>
          <th style="padding: 8px; text-align: center;">Fecha de entrega</th>
          <th style="padding: 8px; text-align: center;">Asistente recepción</th>
          <th style="padding: 8px; text-align: center;">Prenda</th>
          <th style="padding: 8px; text-align: center;">Ubicación</th>
          <th style="padding: 8px; text-align: center;">Apellido</th>
          <th style="padding: 8px; text-align: center;">Nombre</th>
          <th style="padding: 8px; text-align: center;">DNI</th>
          <th style="padding: 8px; text-align: center;">Alerta enviada</th>
        </tr>
      </thead>
      <tbody>
        <% prendasOlvidadasList.forEach(detalle => { %>
          <tr>
            <td style="padding: 8px;"><%= new Date(detalle.dataValues.fecha_de_egreso).toLocaleDateString() %></td>
            <td style="padding: 8px;">
              <%= detalle.dataValues.usuario_egreso ? detalle.dataValues.usuario_egreso.nombre : 'No especificado' %>
            </td>
            <td style="padding: 8px;">
              <%= detalle.detalles.length> 0 ? detalle.detalles[0].dataValues.clase_prenda.tipo : 'No especificado' %>
            </td>
          <td style="padding: 8px;">
            <%= detalle.dataValues.ubicacion ? detalle.dataValues.ubicacion : 'Sin datos' %>
          </td>
          <td style="padding: 8px;">
            <%= detalle.dataValues.cliente && detalle.dataValues.cliente.apellido ? detalle.dataValues.cliente.apellido
              : 'Sin datos' %>
          </td>
          <td style="padding: 8px;">
            <%= detalle.dataValues.cliente && detalle.dataValues.cliente.nombre ? detalle.dataValues.cliente.nombre : 'Sin datos'
              %>
          </td>
          <td style="padding: 8px;">
            <%= detalle.dataValues.cliente && detalle.dataValues.cliente.dni ? detalle.dataValues.cliente.dni : 'Sin datos' %>
          </td>
            <td style="padding: 8px;"><%= detalle.alerta_enviada === 1 ? 'Sí' : 'No' %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <p style="margin-bottom: 20px; font-size: 14px; color: #d24e4e;">
      <strong> 
        ESTE ES UN MAIL DE PRUEBA PARA EL DESARROLLO DE UN SISTEMA.
      </strong>
    </p>
    <p style="margin-bottom: 20px; font-size: 16px; color: #555;">¡Atte. area de juegos y asistencia!</p>
  </div>
  <%- include('../../views/footer_email') %>